{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://videocraft-backend.railway.app"
  },
  "functions": {
    "frontend/build/**": {
      "includeFiles": "frontend/build/**"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/frontend/build/index.html"
    }
  ]
}
