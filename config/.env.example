# VideoCraft AI Video Editor Environment Configuration
# Copy this file to .env and modify as needed

# ================================
# APPLICATION SETTINGS
# ================================
DEBUG=True
HOST=0.0.0.0
PORT=8000
SECRET_KEY=your-secret-key-change-in-production

# ================================
# FILE HANDLING
# ================================
MAX_UPLOAD_SIZE=524288000  # 500MB in bytes
UPLOAD_DIR=./uploads
PROCESSED_DIR=./processed
TEMP_DIR=./temp
STATIC_DIR=./static

# Supported formats (comma-separated)
SUPPORTED_VIDEO_FORMATS=mp4,avi,mov,wmv,flv,webm,mkv
SUPPORTED_AUDIO_FORMATS=mp3,wav,aac,flac,ogg,m4a
SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,gif,bmp,webp

# ================================
# AI MODEL SETTINGS
# ================================
USE_GPU=False
HF_CACHE_DIR=./models_cache
DEVICE=cpu  # or cuda if GPU available

# Model download settings
AUTO_DOWNLOAD_MODELS=True
MODEL_DOWNLOAD_TIMEOUT=300  # seconds

# Video Analysis Models
VIDEO_ANALYSIS_MODEL=facebook/detr-resnet-50
SCENE_CLASSIFICATION_MODEL=google/vit-base-patch16-224
VIDEO_QUALITY_MODEL=openai/clip-vit-base-patch32

# Emotion Detection Models
FACIAL_EMOTION_MODEL=j-hartmann/emotion-english-distilroberta-base
AUDIO_EMOTION_MODEL=ehcalabres/wav2vec2-lg-xlsr-en-speech-emotion-recognition
TEXT_EMOTION_MODEL=cardiffnlp/twitter-roberta-base-emotion

# Audio Processing Models
SPEECH_RECOGNITION_MODEL=openai/whisper-base
AUDIO_CLASSIFICATION_MODEL=facebook/wav2vec2-base-960h

# Background Removal Models
BACKGROUND_REMOVAL_MODEL=u2net
SEGMENTATION_MODEL=selfie_segmentation

# ================================
# API KEYS (Optional)
# ================================
OPENAI_API_KEY=
HUGGINGFACE_API_KEY=
REPLICATE_API_KEY=

# ================================
# DATABASE SETTINGS
# ================================
DATABASE_URL=sqlite:///./videocraft.db
# For PostgreSQL: postgresql://user:password@localhost:5432/videocraft
# For MySQL: mysql://user:password@localhost:3306/videocraft

# ================================
# REDIS SETTINGS (Optional)
# ================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
USE_REDIS=False

# ================================
# LOGGING SETTINGS
# ================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_DIR=./logs
LOG_FILE=videocraft.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# ================================
# CORS SETTINGS
# ================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# ================================
# PROCESSING SETTINGS
# ================================
MAX_CONCURRENT_JOBS=3
JOB_TIMEOUT=1800  # 30 minutes
CLEANUP_TEMP_FILES=True
TEMP_FILE_RETENTION=3600  # 1 hour

# Video processing settings
MAX_VIDEO_DURATION=1800  # 30 minutes
MAX_VIDEO_RESOLUTION=1920x1080
VIDEO_BITRATE=2000k
AUDIO_BITRATE=128k

# ================================
# MONITORING & HEALTH
# ================================
HEALTH_CHECK_ENABLED=True
METRICS_ENABLED=True
PERFORMANCE_MONITORING=True

# ================================
# SECURITY SETTINGS
# ================================
SECURE_COOKIES=True
SECURE_HEADERS=True
FILE_SCAN_ENABLED=True
VIRUS_SCAN_ENABLED=False  # Requires additional setup

# ================================
# FEATURE FLAGS
# ================================
ENABLE_VIDEO_ANALYSIS=True
ENABLE_EMOTION_DETECTION=True
ENABLE_AUDIO_PROCESSING=True
ENABLE_BACKGROUND_REMOVAL=True
ENABLE_MUSIC_RECOMMENDATION=True
ENABLE_VIDEO_EDITING=True
ENABLE_REAL_TIME_PROCESSING=False

# ================================
# CLOUD STORAGE (Optional)
# ================================
USE_CLOUD_STORAGE=False
CLOUD_PROVIDER=aws  # aws, gcp, azure
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_REGION=us-east-1

# ================================
# EMAIL SETTINGS (Optional)
# ================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=True
FROM_EMAIL=

# ================================
# ANALYTICS (Optional)
# ================================
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=
SENTRY_DSN=

# ================================
# DEVELOPMENT SETTINGS
# ================================
DEV_MODE=True
HOT_RELOAD=True
MOCK_AI_RESPONSES=False  # For testing without AI models
